# Copy this file to .dev.vars for local development
# For production, set these as secrets using: npx wrangler secret put VARIABLE_NAME

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Database Configuration
DATABASE_URL=your_database_url_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here

# Admin Configuration (CHANGE THESE VALUES!)
ADMIN_EMAIL=your-admin-email@example.com
ADMIN_NAME=Your Admin Name
ADMIN_PASSWORD=YourSecurePassword123!

# Email Configuration (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
FROM_EMAIL=Your Project <your-email@gmail.com>
FROM_NAME=Your Project Name

# Email Testing (set to true for console logging during development)
USE_ETHEREAL_EMAIL=false

# Environment
ENVIRONMENT=development

# Encryption rounds for bcrypt (higher = more secure but slower)
BCRYPT_ROUNDS=12

# Security Configuration
# API Key for sensitive admin endpoints (generate a random string)
API_KEY=your-secret-api-key-for-admin-endpoints

# File Storage Configuration
FILES_BUCKET_NAME=faith-defenders-files
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_ENDPOINT=your-r2-endpoint-url

# Rate Limiting Configuration (optional - defaults will be used if not set)
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Security Headers Configuration
CSP_REPORT_URI=https://your-domain.com/api/security/csp-report

# AI API Configuration
EDEN_API_KEY=your-eden-api-key-here
EDEN_API_URL=https://eden.ai/api/v1/chat/completions
AI_MODEL=x-ai/grok-4-fast:free

# Enable security features (set to true in production)
ENABLE_CSRF_PROTECTION=true
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_HEADERS=true
